@font-face {
    font-family: 'InfinitySans-RegularA1';
    src: url('https://cdn.jsdelivr.net/gh/projectnoonnu/noonfonts_20-04@2.1/InfinitySans-RegularA1.woff') format('woff');
    font-weight: normal;
    font-style: normal;
}

* {
	margin: 0 auto;
	padding: 0;
	list-style: none;
	text-decoration: none;
	color: black;
   font-family: 'InfinitySans-RegularA1';
}

#wrap {
	width: 1600px;
	height: 100%;
}
/* content */

#like {
	 border: none;
    outline:none;
}

.content {
  width: 1200px;
  height: 100%;
  text-align: center;
  margin-bottom: 50px;
}

.market_frame {
  height: 450px;
}

.market_frame > img {
  float: left;
}

.market_frame {
  display: flex;
}

.content_title {
  padding: 30px;
  font-size: 40px;
}

.market_intro {
  width: 100%;
  text-align: left;
  margin-left: 50px;
}
.market_content {
  line-height: 60px;
}

.market_title {
  font-size: 25px;
}

.market_price {
  font-size: 40px;
}

.market_view {
  margin-top: 20px;
  margin-bottom: 20px;
  font-size: 14px;
  color: rgb(204, 204, 204);
}

.market_view > i {
  color: rgb(204, 204, 204);
  margin-left: 10px;
}

.market_profile {
  font-size: 18px;
  line-height: 40px;
}

.market_like > button {
  border-radius: 6px;
  width: 180px;
  height: 50px;
  border: 0;
  font-size: 20px;
  margin-right: 20px;
  position: relative;
  top: 50px;
  color: white;
  background: rgb(247, 0, 0);
}

.market_like i {
  color: white;
}

.market_profile > p::before {
  content:'';
  display:inline-block;
  width:3px;
  height:3px;
  margin:-5px 10px 0 0;
  vertical-align:middle;
  background: rgb(204, 204, 204);
  border-radius:50%
}

.market_profile > p {
	color: gray;
}

.market_like .like, .market_like .talk {
  background: rgb(204, 204, 204);
}


.market_information > p {
  font-size: 30px;
  text-align: left;
  margin-top: 20px;
  margin-bottom: 10px;
}

.market_information > pre {
  text-align: left;
  font-size: 16px;
  line-height: 1;
}

.market_like > button {
	cursor: pointer;
}

#div_button{
  height: 100px;
  margin-right: 300px;
}

.attach-button {
	background-color: #f8f8f8;
	padding-left: 10px;
	padding-right: 10px;
	padding-top: 6px;
	padding-bottom: 6px;
	font-size: 13px;
	border-radius: 6px;
	text-align: center;
	border: 0;
	margin-right: 10px;
	position: relative;
}

#div_button{
  text-align: right;
}

/* content e */
