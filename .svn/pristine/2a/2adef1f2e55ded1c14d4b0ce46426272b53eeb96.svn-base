	flex : 0 0 200px;
	border : 2px solid #000;
	border-radius : 10px;
	
}
.back_img{
    width: 100%;
    border-radius: 0 0 10px 10px;
    background:url("../images/babpoolintro2.png");
    margin-top: 15px;		
}
