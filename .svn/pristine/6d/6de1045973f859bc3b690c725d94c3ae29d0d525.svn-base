
@font-face {
    font-family: 'InfinitySans-RegularA1';
    src: url('https://cdn.jsdelivr.net/gh/projectnoonnu/noonfonts_20-04@2.1/InfinitySans-RegularA1.woff') format('woff');
    font-weight: normal;
    font-style: normal;
}

* {
	margin: 0 auto;
	padding: 0;
	list-style: none;
	text-decoration: none;
	color: black;
    font-family: 'InfinitySans-RegularA1';
}

a {
	color: black;
}

a:hover {
	text-decoration: none;
	color: black;
}

#wrap {
	width: 1600px;
	height: 100%;
}

/* content */

.content-title {
	height: 50px;
}

.content {
	width: 1200px;
	height: 100%;
	border: 1px solid #ccc;
	z-index: -1;
	border-radius: 10px;
	padding: 29px 29px 0;
	margin-bottom: 20px;
}

.content-head {
	height: 160px;
	border-bottom: 1px solid #ccc;
}

.profile-date {
	line-height: 13px;
	font-size: 14px;
}

.content-head-title {
	font-size: 30px;
	margin-top: 10px;
	margin-bottom: 15px;
}

.content-nickname {
	margin-bottom: 10px;
	font-size: 15px;
}

/* content-content */

.content-content {
	margin-top: 20px;
	height: 100%;
}

.re_date {
	color: gray;
}

pre {
	border: 0;
	font-size: 15px;
	line-height: 1;
}

.attach-area {
	background-color: #f8f8f8;
	font-size: 15px;
	padding: 5px;
	border-radius: 5px;
	margin-bottom: 20px;
	margin-top: 20px;
}

/* content-content e */

.comment {
	height: 350px;
	border-top: 1px solid #ccc;
}

.comment-title {
	margin-top: 20px;
	margin-bottom: 20px;
	font-size: 19px;
}

.comment-area {
	padding: 16px 10px 10px 18px;
	height: 100px;
	border: 2px solid #ccc;
	border-radius: 10px;
	margin-top: 10px;
}

.comment-area-writer {
	margin-bottom: 10px;
}

.comment-area-content {
	overflow: hidden;
	height: 17px;
	outline: 0;
	border: 0;
	resize: none;
	font-size: 13px;
	width: 100%;
}

.comment-date {
	font-size: 13px;
	color: gray;
}

.attach-button {
	min-width: 60px;
	background-color: #f8f8f8;
	padding-left: 10px;
	padding-right: 10px;
	padding-top: 6px;
	padding-bottom: 6px;
	font-size: 13px;
	border-radius: 6px;
	text-align: center;
	float: right;
	border: 0;
	margin-right: 10px;
}

.list {
	min-width: 40px;
	background-color: #ccc;
	padding: 8px;
	color: black;
	font-size: 13px;
	border-radius: 6px;
	text-align: center;
	float: right;
	margin-top: 20px;
	margin-bottom: 20px;
}

/* content e */

#div_button {
	text-align: right;
	height: 100px;
	margin-top: 50px;
	margin-right: 20px;
}

.edit_button{
	min-width: 60px;
	background-color: #f8f8f8;
	padding-left: 10px;
	padding-right: 10px;
	padding-top: 6px;
	padding-bottom: 6px;
	font-size: 13px;
	border-radius: 6px;
	text-align: center;
	float: right;
	border: 0;
	margin-right: 10px;
}

.re_reply_button {
	min-width: 60px;
	background-color: #f8f8f8;
	padding-left: 10px;
	padding-right: 10px;
	padding-top: 6px;
	padding-bottom: 6px;
	font-size: 13px;
	border-radius: 6px;
	text-align: center;
	border: 0;
	margin-right: 10px;
}